<Window x:Class="Prakt_2_15_11_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prakt_2_15_11_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Name="Color" Text="Color Change" FontSize="20" FontWeight="UltraBlack"  HorizontalAlignment="Stretch" Margin="20"/>
        <GroupBox Margin="10" Header="Change" HorizontalAlignment="Left" VerticalAlignment="Center">
            <StackPanel Margin="5 0 0 10">
                <RadioButton Name="RadioButtonGreen" Margin="0,5,0,0" Checked="RadioButton_Checked">Green</RadioButton>
                <RadioButton Name="RadioButtonYellow" Margin="0,5,0,0" Checked="RadioButton_Checked">Yellow</RadioButton>
            </StackPanel>
        </GroupBox>
        <Button Name="Start" Height="50" Width="100" Click="Button_Click">Start</Button> 
    </Grid>
</Window>
